<ol class="recipe-list">
  {{#each recipes as |recipe|}}
    <li>
      <article class="recipe">
        <div class="title">
          <h1>{{recipe.recipe_name}}</h1>
          <span>{{recipe.diet_type}}</span>
          <p>{{recipe.ingredients}}</p>
          <p>{{recipe.instructions}}</p>
        </div>
      </article>
    </li>
  {{/each}}
</ol>